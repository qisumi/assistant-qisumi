# Database Configuration
DB_TYPE=sqlite # mysql or sqlite
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=assistant_qisumi
# DB_FILE_PATH: SQLite数据库文件路径
# 默认值: 可执行文件所在目录下的 assistant.db
# 可以设置为绝对路径或相对路径
DB_FILE_PATH=assistant.db # for sqlite

# HTTP Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=4569

# JWT Configuration
JWT_SECRET=dev-secret-key-for-jwt-authentication
JWT_EXPIRE_HOUR=24

# Crypto Configuration
API_KEY_ENCRYPTION_KEY=dev-32-byte-encryption-key-for-api-keys

# Logger Configuration
# LOG_LEVEL: 日志级别 (debug, info, warn, error)
# 默认值: info
LOG_LEVEL=info

# LLM Configuration
LLM_API_KEY=
LLM_MODEL_NAME=
LLM_API_BASE_URL=

# LLM Thinking Configuration
# LLM_THINKING_TYPE: 深度思考模式 (disabled, enabled, auto)
# - disabled: 不使用深度思考能力
# - enabled: 强制使用深度思考能力
# - auto: 模型自行判断是否使用深度思考能力 (默认)
# 默认值: auto
LLM_THINKING_TYPE=auto

# LLM_REASONING_EFFORT: 思考强度 (low, medium, high, minimal)
# - minimal: 不思考 (最低成本)
# - low: 低 (轻度思考)
# - medium: 中 (平衡模式，默认)
# - high: 高 (深度思考)
# 默认值: medium
LLM_REASONING_EFFORT=medium